                    <a
                      :id="option.id"
                      x-text="option.label"
                      :class="option.class"
                      role="menuitem"
                      tabindex="-1"
                      class="text-gray-700 block px-4 py-2 text-sm cursor-pointer"
                      @@click="selectOption(option)"
                    >
                    </a>
                  </template>
                </div>
              </div>
            </div>
          </div>
        }
      </div>
    </div>
  </div>
</div>
