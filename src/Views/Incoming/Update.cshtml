@model OregonNexus.Broker.Web.ViewModels.IncomingRequests.CreateIncomingRequestViewModel
@{
    // Copyright: 2023 Education Nexus Oregon
    // Author: Makoa Jacobsen, makoa@makoajacobsen.com
    ViewData["Title"] = "Incoming Record Request Details";
    Layout = "_AuthenticatedLayout";
}

<form
  x-data="incomingForm"
  method="post"
  asp-action="Update"
  autocomplete="off"
>
  <input type="hidden" name="_METHOD" value="PUT" />
  <partial name="_form" for="@Model" />
</form>


@section scripts
{
<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('incomingForm', () => {
        return {
          programAssociations: @Html.Raw(Json.Serialize(@Model.ProgramAssociations)), 
          mappedProgramAssociations: @Html.Raw(Json.Serialize(@Model.ProgramAssociations)),

          courseTranscripts: @Html.Raw(Json.Serialize(@Model.CourseTranscripts)), 
          mappedCourseTranscripts: @Html.Raw(Json.Serialize(@Model.CourseTranscripts)),
        }
    })
  })
</script>
}
